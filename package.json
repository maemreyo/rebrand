{
  "name": "docrebrander",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AI-powered document processing pipeline that converts raw text into structured JSON, enables rich text editing, and generates publication-ready PDFs with OCR support.",
  "keywords": [
    "AI",
    "document processing",
    "Gemini AI",
    "Tiptap",
    "pdfme",
    "Next.js",
    "TypeScript",
    "JSON",
    "PDF generation",
    "text editor",
    "document automation",
    "OCR",
    "pdf2pic",
    "image processing",
    "hybrid workflow"
  ],
  "scripts": {
    "dev": "next dev --port 3009",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:ocr": "echo 'Testing OCR functionality...' && echo 'Please upload test PDFs through the web interface to test OCR capabilities.'",
    "postinstall": "node scripts/setup-ocr-dependencies.js --postinstall",
    "setup:ocr": "node scripts/setup-ocr-dependencies.js",
    "typecheck": "tsc --noEmit"
  },
