NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Gemini AI Configuration (REQUIRED for OCR functionality)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Environment-specific settings
NODE_ENV=development
GOOGLE_GENAI_USE_VERTEXAI=false

# Development Mode: Mock PDF Extraction
# Set to "true" to use mock data from data/extract-pdf-response.json in development
USE_MOCK_PDF_EXTRACTION=false

# Optional: Caching and Performance
CACHE_TTL=86400000
GEMINI_TIMEOUT=30000
GEMINI_MAX_RETRIES=3

# OCR Processing Configuration (Optional)
OCR_MAX_FILE_SIZE=52428800
OCR_MAX_PAGES=100
OCR_DEFAULT_DENSITY=300
OCR_DEFAULT_FORMAT=png
OCR_MAX_PAGES_PARALLEL=5
OCR_ENABLE_IMAGE_OPTIMIZATION=true

# System Dependencies (Information Only)
# Ensure these are installed on your system:
# - GraphicsMagick or ImageMagick (for pdf2pic)
# - Ghostscript (for PDF processing)
# 
# Installation commands:
# macOS: brew install graphicsmagick ghostscript
# Ubuntu/Debian: sudo apt-get install graphicsmagick ghostscript
# Windows: Download from official websites

# Rate Limiting (Optional)
RATE_LIMIT_OCR_REQUESTS_PER_MINUTE=30
RATE_LIMIT_PDF_UPLOADS_PER_HOUR=100